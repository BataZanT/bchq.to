<h1>Log In</h1>

<%= form_with url:log_in_path do |form| %>
    <div class="mb-3">
        <%= form.label :username , class: "text-lg" %>
        <%= form.text_field :username , class: "form-control" %>
    </div>
    <div class="mb-3">
        <%= form.label :password %>
        <%= form.password_field :password , class: "form-control" %>
    </div>

    <div class="mb-3" >
            <%= form.submit "Sign in" , class: "btn btn-success"%>
    </div>
<% end %>